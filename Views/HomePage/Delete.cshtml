@model funduq.Models.HomePage

@{
    ViewData["Title"] = "Delete";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<a asp-action="HomePageSettings" asp-controller="Admin" style="margin: 20px">
    <i class="bi bi-arrow-left" style="color: #4154f1;font-size: large;"></i>
    <span style="color: #4154f1;">Back</span>
</a>
<div class="pagetitle">
    <h1>Delete Home Page</h1>
    <h3>Are you sure you want to delete this?</h3>
</div>



<div>
    <h4>HomePage</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Home Logo
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content("~/LogoImages/"+Model.HomeLogoImage)" asp-append-version="true" height="150px" />

        </dd>
        <dt class="col-sm-2">
            Company Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HomeLogoText)
        </dd>
        <dt class="col-sm-2">
            About us content
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AboutUsParagraph)
        </dd>
        <dt class="col-sm-2">
            Contact Us
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contact.ContactId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="HomeId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    </form>
</div>
