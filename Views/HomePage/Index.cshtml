@model IEnumerable<funduq.Models.HomePage>

@{
    ViewData["Title"] = "Index";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HomeLogoImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeLogoText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AboutUsParagraph)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HomeLogoImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomeLogoText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AboutUsParagraph)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact.ContactId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HomeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HomeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HomeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
