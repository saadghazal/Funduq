@model funduq.Models.HotelService

@{
    ViewData["Title"] = "Create";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
<h1>Create Service</h1>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ServiceType" class="control-label"></label>
                <input asp-for="ServiceType" class="form-control" required />
                <span asp-validation-for="ServiceType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HotelId" class="control-label"></label>
                <select asp-for="HotelId" class ="form-control" asp-items="ViewBag.HotelId" required></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="border: none; background-color: #4154f1;"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Hotels" asp-controller="Admin">Back to List</a>
</div>

