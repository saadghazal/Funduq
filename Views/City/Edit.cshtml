@model funduq.Models.City

@{
    ViewData["Title"] = "Edit";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">

<h1>Edit</h1>
</div>

<h4>City</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CityId" />
            <div class="form-group">
                <label asp-for="CityName" class="control-label">City Name</label>
                <input asp-for="CityName" required class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" style="border: none; background-color: #4154f1;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Cities" asp-controller="Admin">Back to List</a>
</div>

