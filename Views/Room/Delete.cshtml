@model funduq.Models.Room

@{
    ViewData["Title"] = "Delete";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <h1>Delete Room</h1>
</div>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NightPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NightPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfBeds)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfBeds)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomImage)
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content("~/RoomsImages/"+Model.RoomImage)" asp-append-version="true" height="200px" width="300px" />

        </dd>
       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsBreakfastIncluded)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsBreakfastIncluded)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hotel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hotel.HotelName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type.RoomType1)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RoomId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="HotelRooms" asp-controller="Admin" asp-route-id="@Model.Hotel.HotelId" asp-route-hotelName="@Model.Hotel.HotelName">Back to List</a>
    </form>
</div>
