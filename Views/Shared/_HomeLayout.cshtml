@{
    Layout = null;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="@ViewBag.Favicon" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/HomeDesign/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/HomeDesign/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/HomeDesign/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/HomeDesign/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/HomeDesign/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/AdminDesign/css/main.css" rel="stylesheet">
    <link href="~/HomeDesign/assets/css/main.css" rel="stylesheet">


</head>
<body>

    <header id="header" class="header d-flex align-items-center sticky-top">
        <div class="container-fluid container-xl position-relative d-flex align-items-center">

            <a asp-action="Index" class="logo d-flex align-items-center me-auto">

                <h1 class="sitename">@ViewBag.CompanyName</h1>
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    @if (ViewBag.Page == "Home")
                    {
                        <li><a asp-action="Index" class="active">Home</a></li>


                    }
                    else
                    {
                        <li><a asp-action="Index">Home</a></li>


                    }

                    @if (ViewBag.page == "About Us")
                    {

                        <li><a class="active" asp-action="AboutUs">About</a></li>
                    }
                    else
                    {
                        <li><a asp-action="AboutUs">About</a></li>
                    }



                   

                    @if (ViewBag.page == "Contact Us")
                    {


                        <li><a class="active" asp-action="ContactUs">Contact</a></li>
                    }
                    else
                    {
                        <li><a asp-action="ContactUs">Contact</a></li>
                    }



                    @if (ViewBag.page == "Hotels")
                    {
                        <li><a asp-action="HotelsPage" class="active">Hotels</a></li>
                    }
                    else
                    {
                        <li><a asp-action="HotelsPage">Hotels</a></li>
                    }
                    @if (ViewBag.page == "Testimonials")
                    {
                        <li><a asp-action="Testimonials" class="active">Testimonials</a></li>

                    }
                    else
                    {
                        <li><a asp-action="Testimonials">Testimonials</a></li>

                    }

                   



                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>
            @if (ViewBag.user == null)
            {
                <a class="btn-getstarted" asp-action="UserLogin" asp-controller="Authentication">Get Started</a>

            }
            else
            {
                <div class="nav-item dropdown pe-3">
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                      

                        <li>
                            <a class="dropdown-item d-flex align-items-center" asp-action="ProfilePage">
                                <i class="bi bi-person"></i>
                                <span>My Profile</span>
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" asp-action="UserLogout" asp-controller="Authentication">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Sign Out</span>
                            </a>
                        </li>

                    </ul><!-- End Profile Dropdown Items -->
                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <img src="@Url.Content("~/UsersImages/"+ViewBag.user.ProfilePicture)" alt="Profile" style="height:40px; clip-path:circle()">
                        <span class="d-none d-md-block dropdown-toggle ps-2">@ViewBag.user.FirstName @ViewBag.user.LastName</span>
                    </a><!-- End Profile Iamge Icon -->
                </div><!-- End Profile Nav -->
            }
        </div>
    </header>

    <main class="main">
        @RenderBody()
    </main>


    <footer id="footer" class="footer dark-background">

        <div class="container footer-top">
            <div class="row gy-4">
                <div class="col-lg-5 col-md-12 footer-about">
                    <a asp-action="Index" class="logo d-flex align-items-center">
                        <span class="sitename">@ViewBag.CompanyName</span>
                    </a>

                    <div class="social-links d-flex mt-4">
                        <a href="@ViewBag.XUrl"><i class="bi bi-twitter-x"></i></a>
                        <a href="@ViewBag.FacebookUrl"><i class="bi bi-facebook"></i></a>
                        <a href="@ViewBag.InstagramUrl"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>


                <div class="col-lg-3 col-md-12 footer-contact text-center text-md-start">
                    <h4>Contact Us</h4>
                    <p>@ViewBag.ContactUsAddress</p>
                    <p class="mt-4"><strong>Phone:</strong> <span>@ViewBag.ContactUsPhone</span></p>
                    <p><strong>Email:</strong> <span>@ViewBag.ContactUsEmail</span></p>
                </div>

            </div>
        </div>

        <div class="container copyright text-center mt-4">
            <p>© <span>Copyright</span> <strong class="px-1 sitename">@ViewBag.CompanyName</strong> <span>All Rights Reserved</span></p>
           
        </div>

    </footer>
    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>



    <!-- Vendor JS Files -->
    <script src="~/HomeDesign/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/HomeDesign/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/HomeDesign/assets/vendor/aos/aos.js"></script>
    <script src="~/HomeDesign/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/HomeDesign/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/HomeDesign/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="~/HomeDesign/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/HomeDesign/assets/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Main JS File -->
    <script src="~/HomeDesign/assets/js/main.js"></script>

   

</body>
</html>


