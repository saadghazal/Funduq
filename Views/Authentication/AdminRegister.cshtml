@{

    ViewBag.Title = "Admin Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewBag.Title</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <link href="@ViewBag.Favicon" rel="icon">
    <link href="~/AdminDesign/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/AdminDesign/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/AdminDesign/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/AdminDesign/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/AdminDesign/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/AdminDesign/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/AdminDesign/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/AdminDesign/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/AdminDesign/css/style.css" rel="stylesheet">

    <!-- =======================================================
    * Template Name: NiceAdmin
    * Template URL: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/
    * Updated: Apr 20 2024 with Bootstrap v5.3.3
    * Author: BootstrapMade.com
    * License: https://bootstrapmade.com/license/
    ======================================================== -->
</head>

<body>

    <main>
        <div class="container">

            <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                            <div class="d-flex justify-content-center py-4">
                                <div class="d-flex align-items-center w-auto">
                                    <img src="@ViewBag.Logo" asp-append-version="true" alt="" height="110px">

                                </div>
                            </div><!-- End Logo -->

                            <div class="card mb-3">

                                <div class="card-body">

                                    <div class="pt-4 pb-2">
                                        <h5 class="card-title text-center pb-0 fs-4">Create an Account</h5>
                                        <p class="text-center small">Enter your personal details to create account</p>
                                    </div>
                                    @if (TempData["Alert"] != null)
                                    {
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            @TempData["Alert"]
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    }
                                    <form class="row g-3" asp-action="AdminRegister" enctype="multipart/form-data">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group col-md-6">
                                            <label asp-for="FirstName" class="control-label">First Name</label>
                                            <input asp-for="FirstName" class="form-control" required />
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label asp-for="LastName" class="control-label">Last Name</label>
                                            <input asp-for="LastName" class="form-control" required />
                                        </div>
                                        <div class="col-md-6 form-group">
                                            <label for="email" class="form-label">Email</label>
                                            <input type="email" name="email" class="form-control" id="email" required>

                                        </div>
                                        <div class="col-md-6 form-group">
                                            <label for="password" class="form-label">Password</label>
                                            <input type="password" name="password" id="password" class="form-control" required>

                                        </div>
                                        <div class="form-group col-12">
                                            <label asp-for="PhoneNumber" class="control-label">Mobile Number</label>
                                            <input asp-for="PhoneNumber" class="form-control" placeholder="0790000000" required />
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-12">
                                            <label asp-for="ProfileImage" class="control-label">Profile Picture</label>
                                            <input asp-for="ProfileImage" class="form-control" required />
                                        </div>
                                        <div class="col-12 form-group">
                                            <input type="submit" value="Sign Up" class="btn btn-primary w-100" style="border: none; background-color: #4154f1;width:100%;border-radius:8px" />
                                        </div>
                                        <div class="col-12">
                                            <p class="small mb-0">Already have an account? <a asp-action="AdminLogin">Log in</a></p>
                                        </div>
                                    </form>



                                </div>
                            </div>



                        </div>
                    </div>
                </div>

            </section>

        </div>
    </main><!-- End #main -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/AdminDesign/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/AdminDesign/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminDesign/vendor/chart.js/chart.umd.js"></script>
    <script src="~/AdminDesign/vendor/echarts/echarts.min.js"></script>
    <script src="~/AdminDesign/vendor/quill/quill.js"></script>
    <script src="~/AdminDesign/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/AdminDesign/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/AdminDesign/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/AdminDesign/js/main.js"></script>

</body>

</html>