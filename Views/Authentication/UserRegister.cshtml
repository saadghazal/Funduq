@model funduq.Models.UserProfile;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up</title>
    <link href="@ViewBag.Favicon" rel="icon">
    <!-- Font Icon -->
    <link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/AdminDesign/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/AdminDesign/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/AdminDesign/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/AdminDesign/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/AdminDesign/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/AdminDesign/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/AdminDesign/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/AdminDesign/css/style.css" rel="stylesheet">
    <!-- Main css -->
    <link rel="stylesheet" href="~/AuthDesign/css/style.css">

</head>
<body>

    <div class="main">
    <!-- Sign up form -->
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">Sign up</h2>
                    @if (TempData["Alert"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Alert"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <form method="POST" asp-action="UserRegister" enctype="multipart/form-data" class="register-form" id="register-form">
                        <div class="form-group">

                            <input class="form-control" asp-for="FirstName" placeholder="Enter your first name" required />
                        </div>
                        <div class="form-group">

                            <input class="form-control" asp-for="LastName" placeholder="Enter your last name" required />
                        </div>
                        <div class="form-group">

                            <input class="form-control" type="email" for="email" name="email" placeholder="Enter your email" required />
                        </div>
                        <div class="form-group">

                            <input class="form-control" type="password" for="password" name="password" id="password" placeholder="Enter your password" required />
                        </div>
                        <div class="form-group">

                            <input asp-for="PhoneNumber" class="form-control" placeholder="0790000000" required />
                        </div>
                        <div class="form-group">
                            <input asp-for="ProfileImage" class="form-control" required />
                        </div>
                        <div class="form-group form-button">
                            <input type="submit" class="form-submit" style="background-color: #4154f1" value="Register" />
                        </div>
                    </form>
                </div>
                <div class="signup-image">
                    <figure><img src="@ViewBag.Favicon" asp-append-version="true"  alt="sing up image"></figure>
                    <a class="signup-image-link" asp-action="UserLogin" >I am already member</a>
                </div>
            </div>
        </div>
    </section>
    <!-- JS -->
    <script src="~/AuthDesign/vendor/jquery/jquery.min.js"></script>
    <script src="~/AuthDesign/js/main.js"></script>

    </div>
</body>
</html>