                        <p>@Model.ContactUsAddress</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="info-box card" style="height: 200px;">
                        <i class="bi bi-telephone"></i>
                        <h3>Call Us</h3>
                        <p>@Model.ContactUsPhoneNumber</p>
                    </div>
                </div>
                <div class="col-lg-6" >
                    <div class="info-box card" style="height: 200px;">
                        <i class="bi bi-envelope"></i>
                        <h3>Email Us</h3>
                        <p>@Model.ContactUsEmail</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="info-box card" style="height: 200px;">
                        <i class="bi bi-clock"></i>
                        <h3>Open Hours</h3>
                        <p>@Model.ContactUsOpenDays<br>@Model.ContactUsOpenHours</p>
                    </div>
