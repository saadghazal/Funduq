@{
    ViewBag.Title = "Contact Us";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <h1>Contact Us</h1>
</div>


@if (Model == null)
{
    <div style="text-align: center;justify-content: center; display: flex;flex-direction: column;align-items: center;height: 40rem;">
        <h3>No Contact Us Created Yet</h3>
        <a asp-action="Create" asp-controller="ContactUs">Create One!</a>
    </div>

}
else
{
<a class="btn btn-primary" asp-action="Edit" asp-controller="ContactUs" asp-route-id="@Model.ContactId">Edit</a> 
<a class="btn btn-danger" asp-action="Delete" asp-controller="ContactUs" asp-route-id="@Model.ContactId">Delete</a>

<section class="section contact" style="margin-top: 40px; display: flex; justify-content: center;">

    

        

            <div class="row">
