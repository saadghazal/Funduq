@model IEnumerable<funduq.Models.Room>

@{
    ViewBag.Title = "Hotel Rooms";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<a asp-action="Hotels" asp-controller="Admin" style="margin: 20px">
    <i class="bi bi-arrow-left" style="color: #4154f1;font-size: large;"></i>
    <span style="color: #4154f1;">Back</span>
</a>

<div class="pagetitle">
    <h1>@ViewBag.HotelName Rooms</h1>
</div>
@if (Model.Count() == 0)
{
    <div
    style="text-align: center;justify-content: center; display: flex;flex-direction: column;align-items: center;height: 40rem;">
    <h3>No rooms found</h3>
    <a asp-action="Create" asp-controller="Room">Create New</a>
</div>

}
else
{
    <p>
    <a asp-action="Create" asp-controller="Room">Create New</a>
</p>
    <table class="table">
    <thead>
        <tr>

            <th>
                Room
                @* @Html.DisplayNameFor(model => model.RoomImage) *@
            </th>
            <th>
                Room Picture
                @* @Html.DisplayNameFor(model => model.RoomImage) *@
            </th>
            <th>
                Price per night
                @* @Html.DisplayNameFor(model => model.NightPrice) *@
            </th>

            <th>
                Number of beds
                @* @Html.DisplayNameFor(model => model.NumberOfBeds) *@
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
                <tr>
                    <th style="font-weight:bold">
                        @item.RoomName
                    </th>
                    <td>
                        <img src=@Url.Content("~/RoomsImages/"+item.RoomImage) alt="Room Image" width="100px" height="100px"
                            asp-append-version="true">
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.NightPrice)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfBeds)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type.RoomType1)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Room" asp-route-id="@item.RoomId">Edit</a> |
                        <a asp-action="Details" asp-controller="Room" asp-route-id="@item.RoomId">Details</a> |
                        <a asp-action="Delete" asp-controller="Room" asp-route-id="@item.RoomId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
