@model IEnumerable<funduq.Models.HotelService>

@{
    ViewBag.Title = "Hotel Services";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<a asp-action="Hotels" asp-controller="Admin" style="margin: 20px">
    <i class="bi bi-arrow-left" style="color: #4154f1;font-size: large;"></i>
    <span style="color: #4154f1;">Back</span>
</a>


<div class="pagetitle">
    <h1>@ViewBag.HotelName Services</h1>

</div>
@if (Model.Count() == 0)
{
    <div style="text-align: center;justify-content: center; display: flex;flex-direction: column;align-items: center;height: 40rem;">
        <h3>No services found</h3>
        <a asp-action="Create" asp-controller="HotelService">Create New</a>
    </div>

}
else
{
    <p>
        <a asp-action="Create" asp-controller="HotelService">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Service Type

                </th>
                <th>
                    Hotel
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hotel.HotelName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="HotelService" asp-route-id="@item.ServiceId">Edit</a> |
                        <a asp-action="Details" asp-controller="HotelService" asp-route-id="@item.ServiceId">Details</a> |
                        <a asp-action="Delete" asp-controller="HotelService" asp-route-id="@item.ServiceId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
