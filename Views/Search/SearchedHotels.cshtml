@model IEnumerable<Hotel>;
@{
    ViewBag.Title = "Hotels";
    Layout = "/Views/Shared/_HomeLayout.cshtml";
}


<!-- Page Title -->
<div class="page-title light-background">
    <div class="container d-lg-flex justify-content-between align-items-center">
        <h1 class="mb-2 mb-lg-0">Hotels</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                <li class="current">Hotels</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->
<!-- Portfolio Section -->
<section id="hotels" class="portfolio section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Hotels</h2>
        <div><span>Check Our</span> <span class="description-title">Hotels</span></div>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">


            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">

                @foreach (var hotel in Model)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item isotope-item">
                        <div class="portfolio-content h-100">
                            <img src="@Url.Content("~/HotelsImages/"+hotel.HotelPicture)" asp-append-version="true" class="img-fluid" alt="">
                            <div class="portfolio-info">
                                <h4><a asp-action="HotelPage" asp-route-hotelId="@hotel.HotelId" asp-controller="Home" title="More Details">@hotel.HotelName</a></h4>
                                <ul style="margin:0; padding:0;">
                                    @for (var i = 1; i <= hotel.NumberOfStars; i++)
                                    {
                                        <li style="display:inline;color:gold;">
                                            <i class="bi bi-star-fill"></i>
                                        </li>

                                    }
                                </ul>

                            </div>
                        </div>
                    </div><!-- End Portfolio Item -->
                }
            </div><!-- End Portfolio Container -->

        </div>

    </div>

</section><!-- /Portfolio Section -->
