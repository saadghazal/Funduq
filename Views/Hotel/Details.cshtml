@model funduq.Models.Hotel

@{
    ViewData["Title"] = "Details";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

  <div class="pagetitle">
      <h1>Hotel Details</h1>
      
    </div>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Hotel Name
            @* @Html.DisplayNameFor(model => model.HotelName) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HotelName)
        </dd>
        <dt class = "col-sm-2">
            Hotel Picture
            @* @Html.DisplayNameFor(model => model.HotelPicture) *@
        </dt>
        <dd class = "col-sm-10">
            <img src="@Url.Content("~/HotelsImages/"+Model.HotelPicture)"  alt="" asp-append-version="true" height="100px" width="150px" />
        </dd>
        <dt class = "col-sm-2">
            Number of stars
            @* @Html.DisplayNameFor(model => model.NumberOfStars) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfStars)
        </dd>
        <dt class = "col-sm-2">
            Featured Hotel?
            @* @Html.DisplayNameFor(model => model.IsFeaturedHotel) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsFeaturedHotel)
        </dd>
        <dt class = "col-sm-2">
            Hotel City
            @* @Html.DisplayNameFor(model => model.HotelCityNavigation) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HotelCityNavigation.CityName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.HotelId">Edit</a> |
    <a asp-action="Hotels" asp-controller="Admin">Back to List</a>
</div>
